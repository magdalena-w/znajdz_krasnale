#:import utils kivy.utils

<SignUpScreen>:
    email: email
    username: username
    passwd: passwd
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        MDIconButton:
            icon: "arrow-left"
            pos_hint: {"center_y": .95}
            user_font_size: "30sp"
            theme_text_color: "Custom"
            text_color: rgba(128, 203, 196, 255)
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "home_screen"
        MDLabel:
            text: "Witaj poszukiwaczu!"
            font_name: "resources/fonts/Poppins-Bold"
            font_size: "25sp"
            pos_hint: {"center_x": .6, "center_y": .85}
            color: rgba(0, 128, 128, 255)
        MDLabel:
            text: "Stwórz nowe konto."
            font_name: "resources/fonts/Poppins-Regular"
            font_size: "16sp"
            pos_hint: {"center_x": .6, "center_y": .79}
            color: rgba(127, 127, 127, 255)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .68}
            TextInput:
                id: username
                hint_text: "Username"
                multiline: False
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(119, 136, 153, 255)  # Text input color
                cursor_color: rgba(119, 136, 153, 255)
                font_size: "14sp"
                cursor_width: "2sp"
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .02
                md_bg_color: rgba(119, 136, 153, 100)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .56}
            TextInput:
                id: email
                hint_text: "Email"
                multiline: False
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(119, 136, 153, 255)  # Text input color
                cursor_color: rgba(119, 136, 153, 255)
                font_size: "14sp"
                cursor_width: "2sp"
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .02
                md_bg_color: rgba(119, 136, 153, 100)
        MDFloatLayout:
            size_hint: .7, .07
            pos_hint: {"center_x": .5, "center_y": .44}
            TextInput:
                id: passwd
                hint_text: "Password"
                multiline: False
                password: True
                size_hint_y: .75
                pos_hint: {"center_x": .43, "center_y": .5}
                background_color: 1, 1, 1, 0
                foreground_color: rgba(119, 136, 153, 255)  # Text input color
                cursor_color: rgba(119, 136, 153, 255)
                font_size: "14sp"
                cursor_width: "2sp"
            MDFloatLayout:
                pos_hint: {"center_x": .45, "center_y": 0}
                size_hint_y: .02
                md_bg_color: rgba(119, 136, 153, 100)
        Button:
            text: "ZAREJESTRUJ SIĘ"
            font_name: "resources/fonts/Poppins-Regular"
            size_hint: .66, .065
            pos_hint: {"center_x": .5, "center_y": .28}
            background_color: 0, 0, 0, 0
            canvas.before:
                Color:
                    rgb: rgba(0, 128, 128, 255)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [7]
        MDLabel:
            text: "lub"
            font_name: "resources/fonts/Poppins-Bold"
            font_size: "13sp"
            color: rgba(0, 128, 128, 255)
            pos_hint: {"center_y": .22}
            halign: "center"
        MDFloatLayout:
            md_bg_color: rgba(119, 136, 153, 100)
            size_hint: .3, .002
            pos_hint: {"center_x": .27, "center_y": .218}
        MDFloatLayout:
            md_bg_color: rgba(119, 136, 153, 100)
            size_hint: .3, .002
            pos_hint: {"center_x": .73, "center_y": .218}
        MDLabel:
            text: "Posiadasz już konto?"
            font_name: "resources/fonts/Poppins-Regular"
            font_size: "13sp"
            halign: "center"
            color: rgba(119, 136, 153, 255)
            pos_hint: {"center_y": .14}
        MDTextButton:
            text: "Zaloguj się"
            font_name: "resources/fonts/Poppins-Bold"
            font_size: "18sp"
            color: rgba(0, 128, 128, 255)
            pos_hint: {"center_x": .5, "center_y": .10}
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login_screen"