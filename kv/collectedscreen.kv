#:import utils kivy.utils
#:import HomeMapView homemapview.HomeMapView

<CollectedScreen>:
    ScrollView:
        MDGridLayout:
            md_bg_color: app.theme_cls.bg_normal
            id: collected_dwarfs_image_grid
            cols: 2
            row_default_height: (self.width - self.cols*self.spacing[0]) / self.cols
            row_force_default: True
            #size_hint: 1, None
            adaptive_height: True
            padding: dp(4), dp(4)
            spacing: dp(4)

            #Right now it's static, need to add actual loading functionality later
            #Should be enough for presentation purposes
            MDSmartTile:
                source: 'resources/images/krasnals/automatek.jpg'
                on_release: HomeMapView.get_krasnal_by_name(HomeMapView, 'Automatek').show_popup()
                MDLabel:
                    text: 'Automatek'
                    color: 'white'
                

            MDSmartTile:
                source: 'resources/images/krasnals/Babelek_Chlaptus.jpg'
                on_release: HomeMapView.get_krasnal_by_name(HomeMapView, 'Babelek Chlaptus').show_popup()
                MDLabel:
                    text: 'Babelek Chlaptus'
                    color: 'white'