#:include kv/homescreen.kv
#:include kv/collectedscreen.kv
#:include kv/loginscreen.kv
#:include kv/signupscreen.kv
#:import utils kivy.utils

Screen:
    MDTopAppBar:
        id: titlename
        title: "Znajdź krasnala"
        left_action_items: [["menu", lambda x : nav_drawer.set_state('toggle')]]
        md_bg_color: app.theme_cls.primary_color
        elevation: 8
        pos_hint: {"top": 1, "left": 1}
        size_hint: 1, .1
    ScreenManager:
        id: screen_manager
        size_hint: 1, .9
        pos_hint: {"top": .9, "left": 1}
        HomeScreen:
            name: "home_screen"
            id: home_screen
            title: "Znajdż krasnala"
        CollectedScreen:
            name: "collected_dwarfs"
            id: collected_dwarfs
            title: "Znalezione krasnale"
        LoginScreen:
            name: "login_screen"
            id: login_screen
            title: "Zaloguj się"
        SignUpScreen:
            name: "signup_screen"
            id: signup_screen
            title: "Zarejestruj się"
           
    MDNavigationLayout:
        MDNavigationDrawer:
            id: nav_drawer
            BoxLayout:
                orientation: 'vertical'
                spacing: '8dp'
                padding: '8dp'
                ImageButton:
                    id: profile
                    source: app.img_source_path
                    canvas.before:
                        Color:
                            rgb: app.theme_cls.primary_color if self.state == 'normal' else app.theme_cls.primary_dark
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    on_release:
                        #nav_drawer.toggle_nav_drawer()
                        app.change_screen("profilephoto_screen", direction='right', mode='push')
                MDLabel:
                    text: 'Zdjęcie profilowe'
                    font_style: 'Subtitle1'
                    color: app.theme_cls.text_color
                    size_hint_y: None
                    height: self.texture_size[1]
                MDLabel:
                    text: 'Witaj, poszukiwaczu krasnali!'
                    font_style: 'Caption'
                    color: app.theme_cls.text_color
                    size_hint_y: None
                    height: self.texture_size[1]
                ScrollView:
                    MDList:
                        OneLineIconListItem:
                            text: 'Mapa'
                            on_release:
                                app.change_screen("home_screen")
                                nav_drawer.set_state('toggle')
                            IconLeftWidget:
                                icon: 'map'
                        OneLineIconListItem:
                            text: 'Zebrane krasnale'
                            on_release:
                                app.change_screen('collected_dwarfs')
                                nav_drawer.set_state('toggle')
                                #nav_drawer.toggle_nav_drawer()
                            IconLeftWidget:
                                icon: 'checkbox-multiple-outline'
                        OneLineIconListItem:
                            text: 'Tryb jasny / ciemny'
                            on_release:
                                app.change_theme()
                                #nav_drawer.toggle_nav_drawer()
                            IconLeftWidget:
                                icon: 'theme-light-dark'
                        